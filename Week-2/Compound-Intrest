#include<stdio.h>
#include<math.h>
int main () {
float a,p,r,n,t;
printf("Enter Principle -> ");
scanf("%f",&p);
printf("Enter Rate of Interest -> ");
scanf("%f",&r);
printf("Enter No. of times interest applied per year -> ");
scanf("%f",&n);
printf("Enter Time -> ");
scanf("%f",&t);

a=p*pow((1+r/n),n*t);

printf("Compound Intrest for the above data = %f\n",a);
}
